<header id="page-header" class="title">
  <h1>Sign in</h1>
</header>

<section class="form-wrapper" id="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class:"last-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    
    <%= flash[:notice] %>
    <%= flash[:alert] %>

    <div class="actions">
      <%= f.submit "Log in", class: "bttn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>

