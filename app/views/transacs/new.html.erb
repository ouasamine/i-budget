<header id="page-header">
  <nav><a href="<%= groups_path %>"><%= image_tag("home_icon.png") %></a></nav>
  <h1>New Transaction</h1>
  <%= button_to image_tag("exit.png"), destroy_user_session_path, method: :delete, class: "butt-icon" %>
</header>
<%= form_with model: @new_transac do |f| %>
  <div class="field">
    <%= f.text_field :name, placeholder: "Name" %>
  </div>
  <div class="field">
    <%= f.number_field :amount, placeholder: "Amount" %>
  </div>
  <div class="field">
    <%= f.collection_select :group_id, @user_groups, :id, :name %>
  </div>
  <%= f.hidden_field :author_id, value: current_user.id %>
  <div class="field">
    <%= f.submit "ADD", class: "bttn" %>
  </div>
<% end %>