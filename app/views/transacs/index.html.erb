<header id="page-header">
  <nav><a href="#"><img src="/assets/home_icon.png"></a></nav>
  <h1>Transactions</h1>
</header>

<section>
  <div class="top-card">
    <span>Total amount:</span> 
    <span><%= @group.total_amount %></span>
  </div>

  <div class="cards-container">
    <% @group_transacs.each do |transac| %>
      <div class="card">
        <div class="column">
          <span><%= transac.name %></span>
          <span><%= transac.created_at %></span>
        </div>
        <div class="column">
          <span><%= transac.amount %></span>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Add new transac", new_transac_path %>
</section>